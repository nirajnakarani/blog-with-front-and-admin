<%- include("header") %>

    <!-- MAIN CONTENT-->
    <div class="main-content">
        <div class="section__content">
            <div class="container-fluid">

                <div class="row">
                    <div class="col-md-12">
                        <!-- DATA TABLE -->
                        <h3 class="title-5 m-b-35">data table</h3>
                        <div class="table-data__tool">
                            <div class="table-data__tool-left">
                                <div class="rs-select2--light rs-select2--md">
                                    <select class="js-select2" name="property">
                                        <option selected="selected">All Properties</option>
                                        <option value="">Option 1</option>
                                        <option value="">Option 2</option>
                                    </select>
                                    <div class="dropDownSelect2"></div>
                                </div>
                                <div class="rs-select2--light rs-select2--sm">
                                    <select class="js-select2" name="time">
                                        <option selected="selected">Today</option>
                                        <option value="">3 Days</option>
                                        <option value="">1 Week</option>
                                    </select>
                                    <div class="dropDownSelect2"></div>
                                </div>
                                <button class="au-btn-filter">
                                    <i class="zmdi zmdi-filter-list"></i>filters</button>

                                <div class="rs-select2--light rs-select2--sm">
                                    <div class="container-search">
                                        <form class="search">
                                            <input class="search__input" type="text"
                                                placeholder="Name , Email Or Gender" id="searchInput" name="search"
                                                value="<%= search %>" autocomplete="off">

                                            <div class="search__icon-container">
                                                <label for="searchInput" class="search__label" aria-label="Search">
                                                    <svg viewBox="0 0 1000 1000" title="Search">
                                                        <path fill="currentColor"
                                                            d="M408 745a337 337 0 1 0 0-674 337 337 0 0 0 0 674zm239-19a396 396 0 0 1-239 80 398 398 0 1 1 319-159l247 248a56 56 0 0 1 0 79 56 56 0 0 1-79 0L647 726z" />
                                                    </svg>
                                                </label>

                                                <button class="search__submit" aria-label="Search">
                                                    <svg viewBox="0 0 1000 1000" title="Search">
                                                        <path fill="currentColor"
                                                            d="M408 745a337 337 0 1 0 0-674 337 337 0 0 0 0 674zm239-19a396 396 0 0 1-239 80 398 398 0 1 1 319-159l247 248a56 56 0 0 1 0 79 56 56 0 0 1-79 0L647 726z" />
                                                    </svg>
                                                </button>
                                            </div>
                                        </form>
                                        <a class="button primary cancel" href="/admin/view_admin"><i
                                                class="fa fa-refresh"></i>Reset</a>
                                    </div>
                                </div>



                            </div>
                            <div class="table-data__tool-right">
                                <button class="au-btn au-btn-icon au-btn--green au-btn--small">
                                    <i class="zmdi zmdi-plus"></i>add item</button>
                                <div class="rs-select2--dark rs-select2--sm rs-select2--dark2">
                                    <select class="js-select2" name="type">
                                        <option selected="selected">Export</option>
                                        <option value="">Option 1</option>
                                        <option value="">Option 2</option>
                                    </select>
                                    <div class="dropDownSelect2"></div>
                                </div>
                            </div>
                        </div>

                        <!-- <form>
                            <input type="text" name="search" value="<%= search %>">
                            <input type="submit" value="Find">
                            <a href="/admin/view_admin">Reset</a>

                        </form> -->
                        <form action="/admin/deleteMany" method="post">
                            <div class="table-responsive table-responsive-data2">
                                <table class="table table-data2">
                                    <thead>
                                        <tr>
                                            <th style="display: flex;">
                                                <label class="au-checkbox">
                                                    <input type="checkbox" id="checkAll">
                                                    <span class="au-checkmark"></span>
                                                </label>


                                                <button class="item" data-toggle="tooltip" data-placement="top"
                                                    title="Delete" id="abc">
                                                    <i class="zmdi zmdi-delete"></i>
                                                </button>



                                            </th>
                                            <th>name</th>
                                            <th>email</th>
                                            <th>gender</th>
                                            <th>hobby</th>
                                            <th>city</th>
                                            <th>description</th>
                                            <th>Image</th>
                                            <th>status</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% if(adminData!="" ){ %>
                                            <%for(var ad of adminData){%>


                                                <tr>
                                                    <td>
                                                        <label class="au-checkbox">
                                                            <input type="checkbox" class="checkItem"
                                                                value="<%= ad.id %>" name="deleteAll[]" id="checkItem">
                                                            <span class="au-checkmark"></span>
                                                        </label>
                                                    </td>
                                                    <td>
                                                        <%= ad.name %>
                                                    </td>
                                                    <td>
                                                        <span class="block-email">
                                                            <%= ad.email %>
                                                        </span>
                                                    </td>
                                                    <td>
                                                        <%= ad.gender %>
                                                    </td>
                                                    <td>
                                                        <%= ad.hobby %>
                                                    </td>
                                                    <td>
                                                        <%= ad.city %>
                                                    </td>
                                                    <td class="desc">
                                                        <%= ad.description %>
                                                    </td>
                                                    <td>
                                                        <div style="width: 50px;height: 50px;">
                                                            <img src="<%= ad.adminImg %>" alt="" \>
                                                        </div>
                                                    </td>

                                                    <td>
                                                        <%if(ad.isActive){%>
                                                            <a href="/admin/setDeactive/?id=<%=ad.id%>"
                                                                class="alert alert-success">Active</a>
                                                            <%}else{%>
                                                                <a href="/admin/setActive/?id=<%=ad.id%>"
                                                                    class="alert alert-danger">Deactive</a>
                                                                <%}%>
                                                    </td>
                                                    <td>
                                                        <div class="table-data-feature">
                                                            <a class="item" data-toggle="tooltip" data-placement="top"
                                                                title="Send">
                                                                <i class="zmdi zmdi-mail-send"></i>
                                                            </a>
                                                            <a href="/admin/updateAdmin/?id=<%= ad.id %>" class="item"
                                                                data-toggle="tooltip" data-placement="top" title="Edit">
                                                                <i class="zmdi zmdi-edit"></i>

                                                            </a>
                                                            <a href="/admin/deleteAdmin/?id=<%=ad.id%>" class="item"
                                                                data-toggle="tooltip" data-placement="top"
                                                                title="Delete">
                                                                <i class="zmdi zmdi-delete"></i>

                                                            </a>
                                                            <a class="item" data-toggle="tooltip" data-placement="top"
                                                                title="More">
                                                                <i class="zmdi zmdi-more"></i>
                                                            </a>
                                                        </div>
                                                    </td>
                                                </tr>
                                                <tr class="spacer"></tr>
                                                <% } %>
                                                    <% } else{ %>
                                                        <tr>
                                                            <td colspan="10" align="center">
                                                                No Record Found
                                                            </td>
                                                        </tr>
                                                        <% } %>

                                                            <tr>
                                                                <td colspan="10">
                                                                    <ul class="pagination"
                                                                        style="justify-content: center;">

                                                                        <%var prev=parseInt(currentPage)-1%>
                                                                            <% if(prev>=0){ %>
                                                                                <li class="page-item"><a
                                                                                        class="page-link"
                                                                                        href="?page=<%= prev %>&search=<%= search %>">Previous</a>
                                                                                </li>
                                                                                <% } %>


                                                                                    <li class="page-item">
                                                                                        <a class="page-link"
                                                                                            href="?page=<%=currentPage%>&search=<%= search %>">
                                                                                            <%=parseInt(currentPage)+1%>
                                                                                        </a>
                                                                                    </li>
                                                                                    <!-- <% for(var i=0;i<totalDocument;i++){ %>
                                                                            <li class="page-item">
                                                                                <a class="page-link"
                                                                                    href="?page=<%= i %>&search=<%= search %>">
                                                                                    <%= i+1 %>
                                                                                </a>
                                                                            </li>
                                                                            <% } %> -->

                                                                                    <%var next=parseInt(currentPage)+1%>
                                                                                        <% if(next<totalDocument){ %>
                                                                                            <li class="page-item"><a
                                                                                                    class="page-link"
                                                                                                    href="?page=<%= next %>&search=<%= search %>">Next</a>
                                                                                            </li>
                                                                                            <% } %>
                                                                    </ul>

                                                                </td>
                                                            </tr>
                                    </tbody>
                                </table>
                            </div>
                        </form>
                        <!-- END DATA TABLE -->
                    </div>
                </div>



                <%- include("footer") %>