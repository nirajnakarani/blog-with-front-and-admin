<%- include("../header") %>

    <!-- MAIN CONTENT-->
    <div class="main-content">
        <div class="section__content section__content--p30">
            <div class="container-fluid">
                <div class="row">

                    <div class="col-lg-12">
                        <div class="card">
                            <div class="card-header">
                                <strong>Update Post</strong> Details
                            </div>
                            <div class="card-body card-block">
                                <form action="/admin/post/updatePostData" method="post" enctype="multipart/form-data"
                                    class="form-horizontal">
                                    <input type="hidden" name="editId" value="<%= postData.id %>">
                                    <div class="row form-group">
                                        <div class="col col-md-3">
                                            <label for="text-input" class=" form-control-label">Title</label>
                                        </div>
                                        <div class="col-12 col-md-9">
                                            <input type="text" id="text-input" name="title" placeholder="Title ..."
                                                class="form-control" value="<%= postData.title %>">

                                        </div>
                                    </div>

                                    <div class="row form-group">
                                        <div class="col col-md-3">
                                            <label for="text-input" class=" form-control-label">category</label>
                                        </div>
                                        <div class="col-12 col-md-9">
                                            <% var category=["news", "sports" ,"politics"]%>
                                                <select name="category" id="select" class="form-control">
                                                    <%category.map((v)=>{%>
                                                        <option value="<%= v %>" <%if(v==postData.category){%>
                                                            <%= selected %>
                                                                <%}%> >
                                                                    <%= v %>
                                                        </option>

                                                        <%})%>
                                                </select>

                                        </div>
                                    </div>


                                    <div class="row form-group">
                                        <div class="col col-md-3">
                                            <label for="textarea-input" class=" form-control-label">Description</label>
                                        </div>
                                        <div class="col-12 col-md-9">
                                            <textarea name="description" id="textarea-input" placeholder="Content..."
                                                class="form-control"><%= postData.description %></textarea>
                                        </div>
                                    </div>

                                    <div class="row form-group">
                                        <div class="col col-md-3">
                                            <label for="file-input" class=" form-control-label">File input</label>
                                        </div>
                                        <div class="col-12 col-md-9">
                                            <div style="display: flex;">
                                                <input type="file" id="file-input" name="postImg">
                                                <div style="width: 100px; object-fit: cover;">
                                                    <img src="<%= postData.postImg %>" alt="">
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- <div class="row form-group">
                                                <div class="col col-md-3">
                                                    <label for="file-multiple-input" class=" form-control-label">Multiple File input</label>
                                                </div>
                                                <div class="col-12 col-md-9">
                                                    <input type="file" id="file-multiple-input" name="file-multiple-input" multiple="" class="form-control-file">
                                                </div>
                                            </div> -->


                                    <div class="card-footer">
                                        <button type="submit" class="btn btn-primary btn-sm">
                                            <i class="fa fa-dot-circle-o"></i> Submit
                                        </button>
                                        <button type="reset" class="btn btn-danger btn-sm">
                                            <i class="fa fa-ban"></i> Reset
                                        </button>
                                    </div>

                                </form>
                            </div>

                        </div>
                    </div>

                </div>


                <%- include("../footer") %>